pipeline {
    agent any

    stages{
        stage('Git Checkout'){
            steps{
                git branch: 'master', url: 'https://github.com/niranjan-pattanaik/demo-counter-app.git'
            }
        }
        stage('unit testing'){
            steps{
                sh 'mvn test'
            }
        }
        stage('Integration testing'){
            steps{
                sh 'mvn verify -DskipUnitTests'
            }
        }
        stage('maven build'){
            steps{
                sh 'mvn clean install'
            }
        }
        stage('SonarQube analysis')
            steps {
                script{
                    withSonarQubeEnv(credentialsId: 'sonar-api') {
                        sh 'mvn clean package sonar:sonar'
                }
            }
        }
    }
}